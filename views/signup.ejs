<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up - Beacon</title>
  <link rel="stylesheet" href="zaregistrirovatsya.css">
</head>
<body>
  <div class="signup-container">
    <div id="error-container" class="error-container" style="display: none;">
      <div class="error-content">
        <p class="error-title">Error</p>
        <p class="error-message"></p>
      </div>
    </div>
    
    <div class="signup-header">
      <h1>Join Beacon</h1>
      <p>Create your account and start exploring!</p>
    </div>
    
    <form id="signup-form" class="signup-form">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" required minlength="3" maxlength="50" pattern="^[a-zA-Z0-9_-]+$">
        <span class="field-error" data-field="username"></span>
      </div>

      <div class="form-group">
        <label for="nickname">Full Name</label>
        <input type="text" id="nickname" name="nickname" required minlength="3" maxlength="150">
        <span class="field-error" data-field="nickname"></span>
      </div>
      
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required>
        <span class="field-error" data-field="email"></span>
      </div>
      
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required minlength="8">
        <span class="field-error" data-field="password"></span>
      </div>
      
      <div class="form-group">
        <label for="confirm-password">Confirm Password</label>
        <input type="password" id="confirm-password" name="confirmPassword" required minlength="8">
        <span class="field-error" data-field="confirmPassword"></span>
      </div>
      
      <div class="form-group">
        <label for="birthdate">Date of Birth</label>
        <input type="date" id="birthdate" name="birthdate" required>
        <span class="field-error" data-field="birthdate"></span>
      </div>
      
      <div class="form-group">
        <label for="interests">Main Interest</label>
        <select id="interests" name="interests" required>
          <option value="">Select your main interest</option>
          <option value="technology">Technology</option>
          <option value="science">Science</option>
          <option value="gaming">Gaming</option>
          <option value="sports">Sports</option>
          <option value="entertainment">Entertainment</option>
          <option value="news">News</option>
          <option value="art">Art</option>
          <option value="music">Music</option>
          <option value="other">Other</option>
        </select>
        <span class="field-error" data-field="interests"></span>
      </div>

      <div class="form-group">
        <label for="bio">Short Bio (Optional)</label>
        <input type="text" id="bio" name="bio" maxlength="160" placeholder="Tell us a bit about yourself (max 160 characters)">
        <span class="field-error" data-field="bio"></span>
      </div>

      <button type="submit">Create Account</button>
    </form>
    <div class="login-link">
      Already have an account? <a href="#">Log in</a>
    </div>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.getElementById('signup-form');
      const errorContainer = document.getElementById('error-container');
  
      function showError(message, errors = []) {
        errorContainer.style.display = 'block';
        errorContainer.innerHTML = `<p>${message}</p>`;
        if (errors.length > 0) {
          const errorList = document.createElement('ul');
          errors.forEach(error => {
            const listItem = document.createElement('li');
            listItem.textContent = error;
            errorList.appendChild(listItem);
          });
          errorContainer.appendChild(errorList);
        }
      }
  
      form.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        errorContainer.style.display = 'none';
        
        try {
          const formData = new FormData(form);
          const response = await fetch('/zaregistrirovatsya', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'CSRF-Token': formData.get('_csrf')
            },
            body: JSON.stringify(Object.fromEntries(formData))
          });
          
          const contentType = response.headers.get('content-type');
          if (contentType && contentType.includes('application/json')) {
            const data = await response.json();
            
            if (!response.ok) {
              if (data.errors) {
                showError('Please correct the errors below.', data.errors);
              } else {
                showError(data.error || 'An error occurred during registration.');
              }
              return;
            }
            
            alert("You have successfully registered! You will now be redirected to the welcome page.");
            window.location.href = '/dobro-pozhalovat';
          } else {
            showError('An unexpected error occurred. Please try again later.');
            console.error('Registration error: Expected JSON response but received:', await response.text());
          }
          
        } catch (error) {
          showError('An unexpected error occurred. Please try again later.');
          console.error('Registration error:', error);
        }
      });
    });
  </script>
</body>
</html>